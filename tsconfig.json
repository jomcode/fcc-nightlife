{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noEmitHelpers": true,
        "moduleResolution": "node",
        "pretty": true
    },
    "exclude": [
        "node_modules",
        "typings/main",
        "typings/main.d.ts"
    ],
    "files": [
        "src/client/app/app.component.ts",
        "src/client/app/app.e2e.ts",
        "src/client/app/app.service.ts",
        "src/client/app/app.spec.ts",
        "src/client/app/feathers/feathers.service.ts",
        "src/client/app/feathers/index.ts",
        "src/client/app/feathers/mockdata.ts",
        "src/client/app/home/barlist/barlist.component.ts",
        "src/client/app/home/barlist/barlist.spec.ts",
        "src/client/app/home/barlist/index.ts",
        "src/client/app/home/checkin/checkin.component.ts",
        "src/client/app/home/checkin/checkin.spec.ts",
        "src/client/app/home/checkin/index.ts",
        "src/client/app/home/home.component.ts",
        "src/client/app/home/index.ts",
        "src/client/app/home/search/index.ts",
        "src/client/app/home/search/search.component.ts",
        "src/client/app/home/search/search.spec.ts",
        "src/client/app/login/index.ts",
        "src/client/app/login/login.component.ts",
        "src/client/app/login/login.spec.ts",
        "src/client/app/signup/index.ts",
        "src/client/app/signup/signup.component.ts",
        "src/client/app/signup/signup.spec.ts",
        "src/client/app/yelp/index.ts",
        "src/client/app/yelp/mockdata.ts",
        "src/client/app/yelp/yelp.service.ts",
        "src/client/app/yelp/yelp.spec.ts",
        "src/client/customtypings.d.ts",
        "src/client/main.ts",
        "src/client/platform/browser/directives.ts",
        "src/client/platform/browser/index.ts",
        "src/client/platform/browser/pipes.ts",
        "src/client/platform/browser/providers.ts",
        "src/client/platform/environment.ts",
        "src/client/polyfills.ts",
        "src/client/vendor.ts",
        "typings/browser.d.ts"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "!./node_modules/**/*.ts",
        "typings/browser.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "convertTabsToSpaces": true
    },
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": false
    }
}
