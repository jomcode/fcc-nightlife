{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noEmitHelpers": true,
        "moduleResolution": "node",
        "pretty": true
    },
    "exclude": [
        "node_modules",
        "typings/main",
        "typings/main.d.ts"
    ],
    "files": [
        "src/app/app.component.ts",
        "src/app/app.e2e.ts",
        "src/app/app.spec.ts",
        "src/app/home/bardetail/bardetail.component.ts",
        "src/app/home/bardetail/bardetail.spec.ts",
        "src/app/home/bardetail/index.ts",
        "src/app/home/barlist/barlist.component.ts",
        "src/app/home/barlist/barlist.spec.ts",
        "src/app/home/barlist/index.ts",
        "src/app/home/home.component.ts",
        "src/app/home/index.ts",
        "src/app/home/search/index.ts",
        "src/app/home/search/search.component.ts",
        "src/app/home/search/search.spec.ts",
        "src/app/home/yelp/index.ts",
        "src/app/home/yelp/mockdata.ts",
        "src/app/home/yelp/yelp.service.ts",
        "src/app/home/yelp/yelp.spec.ts",
        "src/customtypings.d.ts",
        "src/main.ts",
        "src/platform/browser/directives.ts",
        "src/platform/browser/index.ts",
        "src/platform/browser/pipes.ts",
        "src/platform/browser/providers.ts",
        "src/platform/environment.ts",
        "src/polyfills.ts",
        "src/vendor.ts",
        "typings/browser.d.ts"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "!./node_modules/**/*.ts",
        "typings/browser.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "convertTabsToSpaces": true
    },
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": false
    }
}
